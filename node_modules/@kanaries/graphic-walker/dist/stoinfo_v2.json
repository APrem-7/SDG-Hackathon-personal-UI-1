{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "const": "https://graphic-walker.kanaries.net/stoinfo_v2.json"
        },
        "metaDict": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/IMutField"
                }
            }
        },
        "datasets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "metaId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/IRow"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "specDict": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "$schema",
        "metaDict",
        "datasets",
        "specDict"
    ],
    "additionalProperties": false,
    "definitions": {
        "IMutField": {
            "type": "object",
            "properties": {
                "fid": {
                    "type": "string"
                },
                "key": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "basename": {
                    "type": "string"
                },
                "disable": {
                    "type": "boolean"
                },
                "semanticType": {
                    "$ref": "#/definitions/ISemanticType"
                },
                "analyticType": {
                    "$ref": "#/definitions/IAnalyticType"
                },
                "path": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "offset": {
                    "type": "number"
                }
            },
            "required": [
                "fid",
                "semanticType",
                "analyticType"
            ],
            "additionalProperties": false
        },
        "ISemanticType": {
            "type": "string",
            "enum": [
                "quantitative",
                "nominal",
                "ordinal",
                "temporal"
            ]
        },
        "IAnalyticType": {
            "type": "string",
            "enum": [
                "dimension",
                "measure"
            ]
        },
        "IRow": {
            "type": "object"
        }
    }
}